<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.claim.ClaimFragment">

    <!-- ชื่อ -->
    <TextView
        android:id="@+id/etClaimTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อมูลการเคลม"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- ชื่อผู้เคลม -->
    <EditText
        android:id="@+id/etClaimName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ชื่อ"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etClaimTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"/>

    <!-- เบอร์โทร -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="หมายเลขโทรศัพท์"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etClaimName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="phone"/>

    <!-- อีเมล -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="อีเมล"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textEmailAddress"/>

    <!-- ประเภทประกัน -->
    <Spinner
        android:id="@+id/spnInsuranceType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- วันที่เกิดเหตุ -->
    <EditText
        android:id="@+id/etDateOfIncident"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="วันที่เกิดเหตุ"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/spnInsuranceType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="date"/>

    <!-- เหตุผลการเคลม -->
    <EditText
        android:id="@+id/etClaimReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="เหตุผลการเคลม"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etDateOfIncident"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"/>

    <!-- ปุ่มส่งเอกสาร -->
    <Button
        android:id="@+id/btnSubmitClaim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ส่งเอกสารเคลม"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etClaimReason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
