<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.claim.ClaimFragment">

    <!-- ชื่อ -->
    <TextView
        android:id="@+id/tvClaimTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อมูลการเคลม"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- ชื่อ -->
    <EditText
        android:id="@+id/etClaimName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ชื่อ"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvClaimTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- เบอร์โทร -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="เบอร์โทร"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/etClaimName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- อีเมล -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="อีเมล"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- เหตุผลการเคลม -->
    <EditText
        android:id="@+id/etClaimReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="เหตุผลการเคลม"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:lines="4"
        android:maxLines="6"/>

    <!-- วันที่เกิดเหตุ -->
    <EditText
        android:id="@+id/etDateOfIncident"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="วันที่เกิดเหตุ"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/etClaimReason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- ยี่ห้อรถ -->
    <EditText
        android:id="@+id/etCarBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ยี่ห้อรถ"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etDateOfIncident"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- รุ่นรถ -->
    <EditText
        android:id="@+id/etCarModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="รุ่นรถ"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etCarBrand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- ปีที่ผลิต -->
    <EditText
        android:id="@+id/etCarYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ปีที่ผลิต"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etCarModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- ทะเบียนรถ -->
    <EditText
        android:id="@+id/etLicensePlate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ทะเบียนรถ"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etCarYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

    <!-- ปุ่มส่งเอกสารเคลม -->
    <Button
        android:id="@+id/btnSubmitClaim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ส่งเอกสารเคลม"
        app:layout_constraintTop_toBottomOf="@id/etLicensePlate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
